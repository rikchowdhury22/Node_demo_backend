{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "sourceMap": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false
  }
}